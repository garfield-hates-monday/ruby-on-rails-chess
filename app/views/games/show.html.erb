<div class="booyah-box">
  <h1>Good Luck!</h1>
  <br>
  <div class="chessboard">
    <% (1..8).each do |y_position| %>
      <div class="row row-<%= y_position %>">
        <% (1..8).each do |x_position| %>
          <div data-x-position="<%= x_position %>"  data-y-position="<%= y_position %>" class="<%= y_position % 2 == x_position % 2 ? "white" : "black" %>"></div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>